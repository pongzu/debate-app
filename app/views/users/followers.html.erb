<%@followers.each do |follower|%>
    <div class="posts-index-item">
        <div class = "topic-left"><img src="<%= "/user_images/default_user.jpg"%>"class="imageForindex" ></div>
        <div class="topic-centre">
            <div class= "UserForIndex"><%= link_to(follower.name,"/users/#{follower.id}",class:"link-delite") %></div>
            <div class="ContentForIndex"><%=follower.nick_name%></div>
        </div>
        <div class="right">
        <% if @current_user.following?(follower) && @current_user.id != follower.id%>
　       <div class ="Follow"><%=link_to"Unfollow?", relationships_destroy_path(:following_id => follower.id ), method: "post", class: "follow-place"%></div>
        <% elsif @current_user.id != follower.id && @current_user.following?(follower) != true%>
　       <div class = "Follow"><%=link_to"Follow?", relationships_create_path(:following_id => follower.id ), method: "post", class: "follow-place"%></div>
        <%else%>
          <p></p>
        <%end%>
        </div>
     </div>
    
<%end%>


