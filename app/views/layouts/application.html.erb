<!DOCTYPE html>
<html>
  <head>
    <title>DebateApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <div class="header-logo"><%= link_to("Debate", "/") %></div>
      <ul class="header-menus">
        <% if @current_user %>
          <li>
            <%= link_to("make topic!", "/topics/top") %>
          </li>
          <li>
            <%= link_to("topic index", "/topics/index") %>
          </li>
           <li>
            <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
          </li>
          <li>
            <%= link_to("logout", "/logout", {method: :post}) %>
          </li>
        <% else %>
          <li>
            <%= link_to("create new account", "/users/new") %>
          </li>
          <li>
            <%= link_to("login", "/login") %>
          </li>
          <li>
            <%= link_to("login", "/login") %>
          </li>
          <li>
            <%= link_to("login", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>

  <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
  <% end %>
    <%= yield %>
  </body>
</html>

